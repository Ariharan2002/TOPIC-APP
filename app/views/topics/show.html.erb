<style>
  .fr{
  color: red;
  }
</style>
<h2><div class="fr">Topic: <%=  @topic.name %></div></h2>
    <br/>
<div class="row row-cols-1 row-cols-md-4 g-4">
  <% for post in @topic.posts %>
  <div class="col">
<div class="card text-center border-secondary" style="width: 18rem;">
  <div class="card-body">
    <p class="card-text"><%= post.body %></p>
    <%= link_to "Show this post",[@topic,post],class: 'btn btn-outline-dark' %>
  </div>
</div>
</div>
<% end %>
</div>  
  <br/>
  <%= link_to 'Add Post', new_topic_post_path(@topic),class: 'btn btn-outline-primary'%>
  <%= link_to 'Available Posts', topic_posts_path(@topic),class: 'btn btn-outline-primary'%>
  <%= link_to "Back to topics", topics_path,class: 'btn btn-outline-secondary' %>

