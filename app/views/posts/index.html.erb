<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.topic.name %></td>
        <td><%= link_to 'Show Topic', [@topic] %></td>
        <td><%= link_to 'Edit Post', edit_topic_post_path(@topic, post) %></td>
        <td><%= link_to 'Destroy Post', [@topic, post],class: 'btn btn-outline-danger', data: {'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_topic_post_path(@topic) %>