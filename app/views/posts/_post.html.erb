<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Topic:</strong>
    <%= post.topic.name%>
  </p>
  <strong>Tags:</strong>
  <% post.tags.each do |tag| %>
    <%= link_to tag, style:"text-decoration:none" do %>
      <span class="btn btn-secondary"><%= tag.tag_name.capitalize %></span>
    <% end %>
  <% end %>
</div>
